{
  "name": "whatsapp-saas-gateway",
  "version": "1.0.0",
  "description": "SaaS Gateway System for Multi-User WhatsApp Management",
  "main": "index.js",
  "scripts": {
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "dev": "docker-compose -f docker-compose.dev.yml up",
    "logs": "docker-compose logs -f",
    "db:migrate": "cd database && npm run migrate",
    "db:seed": "cd database && npm run seed",
    "build": "docker-compose build",
    "clean": "docker system prune -f",
    "test": "jest",
    "api:dev": "cd api && npm run dev",
    "session-auth:dev": "cd session-auth && npm run dev"
  },
  "keywords": [
    "whatsapp",
    "saas",
    "microservices",
    "gateway",
    "docker",
    "postgresql",
    "jwt",
    "multi-tenant"
  ],
  "author": "WhatsApp SaaS Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "docker": ">=20.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}