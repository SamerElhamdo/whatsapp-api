# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=whatsapp_saas
DB_USER=postgres
DB_PASSWORD=postgres123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
WHATSAPP_IMAGE=whatsapp-instance:latest

# Instance Configuration
INSTANCE_PORT_RANGE_START=4000
INSTANCE_PORT_RANGE_END=4999
MAX_INSTANCES_PER_USER=5
DEFAULT_INSTANCE_MEMORY=512m
DEFAULT_INSTANCE_CPU=0.5

# Storage Configuration
SESSION_STORAGE_PATH=./storage/sessions
MEDIA_STORAGE_PATH=./storage/media
LOGS_STORAGE_PATH=./storage/logs

# Security Configuration
WEBHOOK_SECRET=your-webhook-secret-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Session Auth Service
SESSION_AUTH_URL=http://localhost:3001
QR_CODE_TIMEOUT=300000
SESSION_VALIDATION_INTERVAL=60000

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Webhook Configuration
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT=30000

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
LOG_LEVEL=info

# Billing Configuration
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
BILLING_CURRENCY=USD

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_WEBHOOKS=true
ENABLE_API_KEYS=true
ENABLE_USAGE_ANALYTICS=true